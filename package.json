{
  "name": "ai-context-schema",
  "version": "2.1.0",
  "description": "Universal schema for defining AI assistant behavior across development platforms",
  "main": "validation/schema-validator.js",
  "bin": {
    "ai-context-schema": "validation/schema-validator.js"
  },
  "scripts": {
    "validate": "node validation/schema-validator.js",
    "validate-all": "node validation/schema-validator.js schemas/v2.1.0/examples --warnings",
    "validate-verbose": "node validation/schema-validator.js schemas/v2.1.0/examples --verbose --warnings",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint validation/ --ext .js",
    "lint:fix": "eslint validation/ --ext .js --fix",
    "check-compatibility": "node validation/compatibility-checker.js",
    "docs:serve": "markdownlint-cli2 'docs/**/*.md' 'implementations/**/*.md' 'schemas/**/*.md' '*.md' && echo 'Documentation validated'",
    "prepare": "npm run validate-all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-context-schema/ai-context-schema.git"
  },
  "keywords": [
    "ai",
    "artificial-intelligence",
    "context",
    "schema",
    "coding-assistant",
    "claude",
    "cursor",
    "windsurf",
    "github-copilot",
    "development",
    "standardization"
  ],
  "author": "AI Context Schema Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ai-context-schema/ai-context-schema/issues"
  },
  "homepage": "https://github.com/ai-context-schema/ai-context-schema#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^30.0.5",
    "markdownlint-cli2": "^0.18.1",
    "rimraf": "^6.0.1"
  },
  "files": [
    "schemas/",
    "validation/",
    "docs/",
    "implementations/",
    "README.md",
    "SPECIFICATION.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs",
    "example": "schemas/v2.1.0/examples"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ai-context-schema"
  }
}